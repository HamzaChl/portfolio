<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/scroll.css">
    <title><%= title %></title>
    <link rel="icon" type="x-icon" href="/assets/icon.png">
    <script
      src="https://kit.fontawesome.com/ccd4003a42.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/@studio-freight/lenis@1.0.34/dist/lenis.min.js"></script>
    <script>
        const lenis = new Lenis();
        lenis.on("scroll", () => {});

        function raf(time) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }
        requestAnimationFrame(raf);

        function scrollBehaviorChange() {
            document.documentElement.style.scrollBehavior = "smooth";
            setTimeout(() => {
                document.documentElement.style.scrollBehavior = "auto";
            }, 200);
        }
    </script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const h1 = document.querySelector('h1');
            if (h1) {
                let text = h1.textContent; // Utiliser textContent pour capturer le texte brut sans balises HTML
                let words = text.split(' ');
                let spanContent = '';
                
                words.forEach((word, wordIndex) => {
                    if (word) {
                        let wordSpan = '<span class="word">';
                        if (word.toLowerCase() === 'web' || word.toLowerCase() === 'developper') {
                            for (let i = 0; i < word.length; i++) {
                                let letter = word[i];
                                wordSpan += `<span class="letter alt-head" style="animation-delay:${(wordIndex + i) * 0.1}s">${letter}</span>`;
                            }
                        }
                        else if (word.toLowerCase() === '&') {
                            for (let i = 0; i < word.length; i++) {
                                let letter = word[i];
                                wordSpan += `<span class="letter alt-head special-word" style="animation-delay:${(wordIndex + i) * 0.1}s">${letter}</span>`;
                            }
                        } else {
                            for (let i = 0; i < word.length; i++) {
                                let letter = word[i];
                                wordSpan += `<span class="letter" style="animation-delay:${(wordIndex + i) * 0.1}s">${letter}</span>`;
                            }
                        }
                        
                        wordSpan += '</span> ';
                        spanContent += wordSpan;
                    }
                });
        
                h1.innerHTML = spanContent.trim();
            }
        });
    </script>
</head>
